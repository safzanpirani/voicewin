<Window x:Class="VoiceWin.Views.StatusOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StatusOverlay"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        SizeToContent="Width"
        Height="48"
        WindowStartupLocation="Manual">

    <Border Background="#CC1E1E2E" 
            CornerRadius="24" 
            Padding="16,8"
            BorderBrush="#3F3F5A"
            BorderThickness="1">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <!-- Audio Waveform Bars -->
            <Canvas Width="32" Height="24" VerticalAlignment="Center">
                <Rectangle x:Name="Bar1" Canvas.Left="0" Canvas.Bottom="0" Width="4" Height="8" 
                           Fill="#6366F1" RadiusX="2" RadiusY="2"/>
                <Rectangle x:Name="Bar2" Canvas.Left="7" Canvas.Bottom="0" Width="4" Height="12" 
                           Fill="#6366F1" RadiusX="2" RadiusY="2"/>
                <Rectangle x:Name="Bar3" Canvas.Left="14" Canvas.Bottom="0" Width="4" Height="16" 
                           Fill="#6366F1" RadiusX="2" RadiusY="2"/>
                <Rectangle x:Name="Bar4" Canvas.Left="21" Canvas.Bottom="0" Width="4" Height="10" 
                           Fill="#6366F1" RadiusX="2" RadiusY="2"/>
                <Rectangle x:Name="Bar5" Canvas.Left="28" Canvas.Bottom="0" Width="4" Height="6" 
                           Fill="#6366F1" RadiusX="2" RadiusY="2"/>
            </Canvas>

            <!-- Status Text -->
            <TextBlock x:Name="StatusText" 
                       Text="Recording" 
                       Foreground="#E4E4E7" 
                       FontSize="13" 
                       FontWeight="Medium"
                       VerticalAlignment="Center"
                       Margin="12,0,0,0"/>

            <!-- Mode Indicator (REC/LIVE) -->
            <TextBlock x:Name="ModeIndicator" 
                       Text="REC" 
                       Foreground="#EF4444" 
                       FontSize="10" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="12,0,0,0"
                       Opacity="1"/>
        </StackPanel>
    </Border>
</Window>
